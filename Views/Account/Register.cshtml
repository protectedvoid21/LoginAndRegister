@model AppUser

@{ 
    Layout = "_Layout";
}

<form asp-controller="Account" asp-action="Register" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="@Model.UserName">Username</label><br />
        <div><span asp-validation-for="@Model.UserName" class="text-danger"></span></div>
        <input asp-for="@Model.UserName" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.FirstName">First name</label><br />
        <div><span asp-validation-for="@Model.FirstName" class="text-danger"></span></div>
        <input asp-for="@Model.FirstName" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.LastName">Last name</label><br />
        <div><span asp-validation-for="@Model.LastName" class="text-danger"></span></div>
        <input asp-for="@Model.LastName" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email">Email</label><br />
        <div><span asp-validation-for="@Model.Email" class="text-danger"></span></div>
        <input asp-for="@Model.Email" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.PasswordHash">Password</label><br />
        <div><span asp-validation-for="@Model.PasswordHash" class="text-danger"></span></div>
        <input asp-for="@Model.PasswordHash" type="password"/>
    </div>
    <input type="submit" value="Confirm" />
</form>